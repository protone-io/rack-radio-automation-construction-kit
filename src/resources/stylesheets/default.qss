/* Gradient Button */

RButton[bk="0"] {
    min-width: 40px;
    min-height: 40px
}


/* On Air Button */

RButton[bk="1"] {
    min-width: 92px;
    min-height: 92px;
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #009900, stop: 1 #006600);
    border-color: #009900
}

RButton[bk="1"][position="0"] {
    image: url(:/images/play.png)
}

RButton[bk="1"]:hover {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #00B800, stop: 1 #007A00);
    border-color: #00B800
}

RButton[bk="1"]:pressed {
    border-color: white
}


/* Stack Button */

RButton[bk="2"] {
    min-width: 250px;
    min-height: 100px
}


/* HotKey Button */

RButton[bk="3"] {
    min-width: 80px;
    min-height: 60px;
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #4175FF, stop: 1 #1D48BB);
    border-color: #4175FF
}





/* Library Button */

RButton[bk="4"] {
    min-width: 200px;
    min-height: 100px;
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #787878, stop: 1 #505050);
    border-color: #787878
}



RButton[bk="4"]:pressed {
    border-color: white
}

/*player states:
0   LoadingState,
1   PlayingState,
2   PausedState,
3   FadingState,
4   StoppedState,
5   ErrorState,
6   DisabledState

*/
RButton:pressed {
}

RButton[playerState="1"] {
    border-color: #FFFFFF;
}

RButton[playerState="3"] {
    border-color: red;
    qproperty-positionClockColor: rgba(255,0,0,100);
}
